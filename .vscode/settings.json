{
  "cSpell.words": [
    "albemic",
    "apibase",
    "appbar",
    "autoflush",
    "autouse",
    "dcndl",
    "dcterms",
    "ericblade",
    "fastapi",
    "Hoge",
    "joinedload",
    "jsonify",
    "levelname",
    "mediatype",
    "ndls",
    "nobu",
    "onupdate",
    "outerjoin",
    "passlib",
    "pydantic",
    "pytest",
    "pytestconfig",
    "raiseerr",
    "rootdir",
    "sessionmaker",
    "sqlalchemy",
    "starlette",
    "templating",
    "uvicorn",
    "venv",
    "VITE",
    "werkzeug"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders",
    "**/test_env/**",
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "pylint.args": [
    "--disable=C0114",
    "--disable=C0115",
    "--disable=C0116",
    "--disable=C0301",
    "--disable=W0622"
  ],
  "black-formatter.args": ["--line-length=120"],
  "isort.args": ["--profile", "black"],
  "flake8.args": ["--max-line-length", "120", "--ignore=W293 E203"],
  "python.analysis.extraPaths": ["./bookshelf_app"],
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
